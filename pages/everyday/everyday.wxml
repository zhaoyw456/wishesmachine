<!--pages/everyday/everyday.wxml-->
<!--item就相当于数组名+下标的结合体，适用于调用数组所有数据-->


<view class="page" data-weui-theme="light">
  <view>
    <!-- <view class=' list-item-icon'><image src="/Icon/goodmorning.png"></image></view> -->
    <view class=' list-item-icon'><image src="/Icon/{{goodimg}}.png"></image></view>
    <view class='list-item-title'>{{sj}}</view>
  </view>
  <view wx:for="{{wish}}">
    <view bindtap="copyWish" data-text="{{item.content}}" class="weui-cell_access weui-cell">{{item.content}}</view>
  </view>
  <view class="weui-footer weui-footer_fixed-bottom">
    <image bindtap="updata" class="wmui-update-img" src="/Icon/update.png"></image>
  </view>
  
</view>