                    <input class="txt" name='key' maxlength="-1" placeholder='请输入暗号'></input>
                </view>
                <view class="cu-bar bg-white justify-end">
                    <view class="action">
                        <button class="cu-btn line-green text-green" bindtap="hideMask">取消</button>
