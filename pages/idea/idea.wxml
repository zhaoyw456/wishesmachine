    <view class="cu-modal show" wx:if="{{show}}">
        <form bindsubmit="sub">
            <view class="cu-dialog">
                <view class="cu-bar bg-white justify-end">
                    <view class="content">被你发现了</view>
                    <view class="action" bindtap="hideMask">
                        <text class="cuIcon-close text-red"></text>
