.page-box {
  height: 100%;
  padding: 40px;  
  display: flex;
  justify-content: center;
  align-items: center;
}
.mask{
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,.5);
  position: absolute;
  top: 0;
  left: 0;
  z-index: 10;
}
.txt{
  width: 80%;
  height: 200rpx;
  font-size: 28rpx;
  color: #333;
  background: #fff;
  margin: 20% auto 50rpx;
  padding: 20rpx;
}

.sub-btn{
  width: 80%;
  height: 80rpx;
  line-height: 80rpx;
  background: #2ca2ed;
  font-size: 28rpx;
  color: #fff;
}
