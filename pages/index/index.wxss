.page{background-color:var(--weui-BG-2)}image{margin:4px 0}
page{
  height: 100%;
}
.index-box {
  height: 100%;
  width: 750rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}
.motto-box {
  flex: 1;
  display: flex;
  justify-content: space-between;
  margin: 20px;
}
.img-box {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.motto {
  align-self: center;
}
.author {
  display: flex;
  flex-direction: row-reverse;
}
.right-box {
  align-self: flex-end;
}






.motto-box image {
  width:  25px;
  height: 25px;
}
.img-box image {
  width: 150px;
  height: 150px;
}